<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnexionActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/spareservicelogomini"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/activity_connexion_subtitle"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/activity_connexion_email_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_connexion_email_hint"
        android:inputType="text"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/activity_connexion_mdp_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_connexion_mdp_hint"
        android:inputType="text"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/activity_connexion_connect_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:textStyle="bold"
        android:background="@drawable/boundedbtn"
        android:text="@string/activity_connexion_connect_button"
        />

    <Button
        android:id="@+id/activity_connexion_mdp_oublie_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:textStyle="bold"
        android:background="@drawable/boundedbtn"
        android:text="@string/activity_connexion_mdp_oublie_button"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/activity_connexion_subtitleInscription"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/activity_connexion_inscrire_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:textStyle="bold"
        android:background="@drawable/boundedbtn"
        android:text="@string/activity_connexion_inscrire_button"
        />



</LinearLayout>